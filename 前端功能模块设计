          </select>

          <select
            value={priority}
            onChange={(e) => setPriority(e.target.value)}
            className="p-2 border rounded"
          >
            {["é«˜", "ä¸­", "ä½"].map((p) => (
              <option key={p} value={p}>
                {p} ä¼˜å…ˆçº§
              </option>
            ))}
          </select>
        </div>
        <button onClick={handleAssign} className="mt-2 px-4 py-2 bg-blue-500 text-white rounded">
          ğŸš€ æäº¤ä»»åŠ¡
